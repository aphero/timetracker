<h1>Developer List</h1>
<%= link_to 'New Developer', new_developer_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @developers.each do |d| %>
      <tr>
        <td><%= d.name %></td>
        <td><%= d.email %></td>
        <td><%= link_to 'Show', d %></td>
        <td><%= link_to 'Edit', edit_developer_path(d.id) %></td>
        <td><%= link_to 'Destroy', developer_path(d.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
