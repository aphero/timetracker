<h1>Project List</h1>
<%= link_to 'New Project', new_project_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Max Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.desc %></td>
        <td><%= p.max_hours %></td>
        <td><%= link_to 'Show', p %></td>
        <td><%= link_to 'Edit', edit_project_path(p.id) %></td>
        <td><%= link_to 'Destroy', project_path(p.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
