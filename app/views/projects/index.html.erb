Project List

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Max Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.desc %></td>
        <td><%= link_to 'Show', p %></td>
        <td><%= link_to 'Edit', p %></td>
        <td><%= link_to 'Destroy', @developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
