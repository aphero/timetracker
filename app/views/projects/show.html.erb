<h1>Show Project</h1>

<p><%= @project.name %></p>
<p><%= @project.desc %></p>
<p><%= @project.max_hours %></p>

<p>Developer's Time Entries</p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Duration</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.time_entries.each do |t| %>
      <tr>
        <td><%= t.date %></td>
        <td><%= t.duration %></td>
        <td><%= t.project_id %></td>
        <td><%= link_to 'Show', t %></td>
        <td><%= link_to 'Edit', t %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
